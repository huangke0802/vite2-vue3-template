{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "types": ["vite/client"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
